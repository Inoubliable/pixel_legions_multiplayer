<!DOCTYPE html>
<html>
	<head>
		<title>Pixel Legions</title>
		<link rel="stylesheet" href="/dist/styles.css">
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<script src="/js/profile.js"></script>
	</head>
	<body>
		<div class="player-info-container">
			<div class="player-name">{{player.name}}</div>
			<div class="player-country">
				<span class="flag-icon flag-icon-{{player.country.code}}"></span>
				<div class="name">{{player.country.name}}</div>
			</div>
			<div class="player-rating">{{player.rating}}</div>
		</div>

		<div class="achievements">
			{{#each player.achievements}}
				<div class="achievement {{#if this}}enabled{{/if}}" id={{this.id}}>
					<div class="overlay">{{this.description}}</div>
					<img src={{this.icon}}>
				</div>
			{{/each}}
		</div>
	</body>
</html>